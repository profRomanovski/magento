<?xml version="1.0"  encoding="utf-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <type name="Me\CustomQueue\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Me\CustomQueue\Logger\CustomQueueLogger">
        <arguments>
            <argument name="name" xsi:type="string">CustomQueueLogger</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Me\CustomQueue\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
</config>
